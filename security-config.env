# MILITARY-GRADE SECURITY CONFIGURATION
# Copy this file to .env and fill in your actual values

# STRIPE WEBHOOK SECURITY
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# GMAIL SMTP SECURITY
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password-here

# ENCRYPTION KEYS (GENERATE NEW ONES)
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-key-here

# RATE LIMITING
RATE_LIMIT_WINDOW=60000
MAX_REQUESTS_PER_WINDOW=10

# SECURITY HEADERS
CSP_NONCE=your-csp-nonce-here
HSTS_MAX_AGE=31536000

# LOGGING
LOG_LEVEL=info
SECURE_LOGGING=true

# DATABASE SECURITY (if using external DB)
DATABASE_URL=your-secure-database-url-here
DATABASE_SSL=true

# MONITORING
SECURITY_MONITORING=true
ALERT_EMAIL=security@rescuepcrepairs.com 