# RescuePC Repairs - Security Configuration
# Copy this file to .env and fill in your actual values

# Stripe Configuration
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Email Configuration (Gmail)
GMAIL_USER=your_email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# Security Configuration
NODE_ENV=production
VERCEL_ENV=production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# License Configuration
LICENSE_KEY_PREFIX=RESCUE
LICENSE_KEY_LENGTH=32

# Webhook Configuration
WEBHOOK_TIMEOUT_MS=30000
WEBHOOK_RETRY_ATTEMPTS=3

# Database Configuration (if using external database)
DATABASE_URL=your_database_url_here

# Monitoring Configuration
LOG_LEVEL=info
ENABLE_SECURITY_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# ENCRYPTION KEYS (GENERATE NEW ONES)
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-key-here

# SECURITY HEADERS
CSP_NONCE=your-csp-nonce-here
HSTS_MAX_AGE=31536000

# DATABASE SECURITY (if using external DB)
DATABASE_SSL=true

# MONITORING
SECURITY_MONITORING=true
ALERT_EMAIL=security@rescuepcrepairs.com 